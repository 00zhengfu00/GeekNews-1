<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/divider</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteStatusBar" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="item_desc" parent="AppTheme">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="item_author">
        <item name="android:textColor">@color/textThird</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="item_share_dialog">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">17dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>